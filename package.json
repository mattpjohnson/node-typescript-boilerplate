{
  "name": "node-typescript-boilerplate",
  "version": "0.1.0",
  "description": "Boilerplate for Node with TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/mattpjohnson/node-typescript-boilerplate",
  "author": "Matt Johnson <matt@mattpjohnson.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "lint": "tslint --project . 'src/**/*.ts'",
    "start": "ts-node src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && jest --onlyChanged",
      "pre-push": "yarn lint && jest"
    }
  },
  "devDependencies": {
    "husky": "^1.0.0-rc.13",
    "jest": "^23.5.0",
    "prettier": "^1.14.2",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tsc": "^1.20150623.0",
    "tslint": "^5.11.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^3.0.3"
  }
}
